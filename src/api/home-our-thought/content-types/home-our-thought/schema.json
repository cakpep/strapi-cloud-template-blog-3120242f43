{
  "kind": "collectionType",
  "collectionName": "home_our_thoughts",
  "info": {
    "singularName": "home-our-thought",
    "pluralName": "home-our-thoughts",
    "displayName": "Home Our Thought",
    "description": "Simple SRX blog post with hero and modular content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 3,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 500
    },
    "display_date": {
      "type": "date",
      "required": true
    },
    "hero_image_url": {
      "type": "string",
      "required": true
    },
    "hero_image_alt": {
      "type": "string"
    },
    "topics": {
      "type": "json"
    },
    "attributes": {
      "type": "component",
      "component": "home.attribute",
      "repeatable": true
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "home.rich-text",
        "home.image-remote"
      ],
      "required": true
    }
  }
}